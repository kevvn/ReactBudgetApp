{
  "name": "budget-app",
  "version": "0.0.0",
  "license": "MIT",
  "dependencies": {
    "@core/lib-react": "^0.x.x",
    "@material-ui/core": "^3.0.1",
    "@material-ui/icons": "^3.0.1",
    "autoprefixer": "^8.2.0",
    "express": "^4.16.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "webpack": "^3.12.0"
  },
  "devDependencies": {
    "babel-jest": "^22.4.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-react-css-modules": "^3.4.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest-css-modules": "^1.1.0",
    "json-server": "^0.14.0",
    "dotenv": "^6.0.0",
    "http-proxy": "^1.17.0",
    "node-sass": "^4.7.2",
    "css-loader": "^0.28.11",
    "style-loader": "^0.21.0",
    "postcss-loader": "^2.1.5",
    "postcss-scss": "^2.0.0",
    "redux-logger": "^3.0.6",
    "sass-loader": "^6.0.6",
    "webpack-pwa-manifest": "^3.6.2"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "raf/polyfill"
    ],
    "coverageDirectory": "./coverage/",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^.+\\.(css|scss|less)$": "jest-css-modules"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@core)/)"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "config": {
    "appType": "react:alpha",
    "lint": {
      "fix": "prettier"
    },
    "environment": [
      {
        "name": "RAZZLE_SAMPLE_ENV",
        "../envconfigs": {
          "PROD": "__SAMPLE_PROD_ENV__",
          "QA": "__SAMPLE_QA_ENV__"
        }
      }
    ],
    "pwa": {
      "name": "Macys reactive platform",
      "short_name": "MacysApp",
      "description": "Macys reactive platform",
      "background_color": "#375360",
      "start_url": "/",
      "display": "standalone",
      "theme_color": "#cc0000",
      "image-src": "src/shared/assets/mars_logo_1.png"
    }
  }
}
